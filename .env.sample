# 🚀 Server Configuration
PORT=5000
NODE_ENV=development  # Change to "production" in production

# 🗄️ Database Configuration (MongoDB)
MONGO_URI=mongodb://mongo:27017/scalenodets  # MongoDB container in Docker

# 🔑 Authentication (JWT)
JWT_SECRET=supersecretkey  # Change this in production!
JWT_EXPIRES_IN=7d  # Tokens expire in 7 days

# 💾 Redis Configuration (Caching & Rate Limiting)
REDIS_HOST=redis
REDIS_PORT=6379

# 📜 Logging Configuration
LOG_LEVEL=info  # Available levels: error, warn, info, debug

# 🔔 Rate Limiting
RATE_LIMIT_WINDOW=15  # Window in minutes
RATE_LIMIT_MAX=100  # Max requests per window per IP

# 📈 Monitoring & Metrics
PROMETHEUS_PORT=9090

# 🛠️ Miscellaneous
CORS_ORIGIN=*
